<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="slideDeck">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="maxViewsOnScreen">@integer/maximumViewsOnScreen</item>
        <item name="enableOverdrawImprovement">false</item>
        <item name="itemsMarginTop">8dp</item>
        <item name="itemsMarginLeftRight">8dp</item>
        <item name="animationDuration">200</item>
    </style>
</resources>
